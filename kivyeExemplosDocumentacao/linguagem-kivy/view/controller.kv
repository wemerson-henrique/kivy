#:kivy 1.1

<Controller>:
    label_wid: my_custom_label
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        Button:
            text: 'My controller info is: ' + root.info
            on_press: root.do_action(); my_custom_label.font_size = 18
        Label:
            id: my_custom_label
            text: 'My label before button press'